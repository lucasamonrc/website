{
	"singleQuote": false,
	"arrowParens": "always",
	"trailingComma": "all",
	"semi": true,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-organize-imports",
		"prettier-plugin-tailwindcss",
		"prettier-plugin-astro"
	],
	"importOrder": [
		"^react",
		"<THIRD_PARTY_MODULES>",
		"^@/components/(.*)$",
		"^@/lib/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
