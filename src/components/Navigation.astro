---
import { PAGES } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";

const currentPath = Astro.url.pathname;
---

<header
	class="mb-12 flex w-full items-center justify-between border-b border-border pb-4"
>
	<a
		class="text-lg font-semibold tracking-tight text-text no-underline"
		href="/"
	>
		Lucas Castro
	</a>
	<nav class="flex items-center gap-6">
		{
			PAGES.map((page) => {
				const isActive = currentPath.startsWith(page.to);
				return (
					<a
						href={page.to}
						class:list={[
							"text-sm no-underline transition-colors",
							isActive
								? "font-medium text-text"
								: "text-text-secondary hover:text-accent",
						]}
					>
						{page.label}
					</a>
				);
			})
		}
		<ThemeToggle />
	</nav>
</header>
